generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Sex {
  Male
  Female
}

model UserType {
  id          String  @id @default(uuid())
  name        String
  description String
  status      Boolean @default(true)

  users User[]
}

model User {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  birthDate DateTime
  sex       Sex
  phone     String   @db.VarChar(10)
  email     String
  password  String

  userType   UserType @relation(fields: [userTypeId], references: [id])
  userTypeId String
}
